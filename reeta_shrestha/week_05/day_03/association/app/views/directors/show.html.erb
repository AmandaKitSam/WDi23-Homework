<h1><%= @director.name %></h1>
<%= image_tag @director.image, :class => 'feature' %>

<% @director.movies.each do |m| %>
  <%= link_to image_tag(m.image, :class => 'thumb'), m %>
<% end %>

<div class="controls">
  <%= link_to "Edit Director", edit_director_path(@director) %>
  <%= link_to "Delete Director", @director, :method => :delete, :data => {:confirm => "Are you sure to delete: #{@director.name}?"} %>
</div>
