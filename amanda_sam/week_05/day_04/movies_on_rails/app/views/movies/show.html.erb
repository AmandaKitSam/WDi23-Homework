<h1><%= @movie.title %></h1>

<%= image_tag @movie.image, :class => 'feature' %>

<ul>
  <li>Director: <%= link_to @movie.director.name, @movie.director unless @movie.director.nil? %></li>
  <li>Year: <%= @movie.year %></li>
  <li>Genre: <%= @movie.genre %></li>
</ul>

<div class="controls">
  <%= link_to "Edit movie", edit_movie_path(@movie) %>
  <%= link_to "Delete movie", @movie, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
</div>
