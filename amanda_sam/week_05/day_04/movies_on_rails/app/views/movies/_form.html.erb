<!-- UNDER /views/movies -->

<%= form_for @movie do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true %>
  </fieldset>

  <fieldset>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </fieldset>

  <fieldset>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </fieldset>

  <fieldset>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </fieldset>

  <fieldset>
    <%= f.label :director_id %>
    <%= f.select :director_id, Director.pluck(:name, :id), :include_blank => true %>
  </fieldset>

  <fieldset>
    <label></label>
    <%= f.submit %>
  </fieldset>

<% end %>
