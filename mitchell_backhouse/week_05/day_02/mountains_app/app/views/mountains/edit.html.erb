<h1>Edit Mountain</h1>
<%= form_for @mountain do |f| %>
  <%= label_tag :name %> <%= f.text_field :name, value: @mountain.name %><br />
  <%= label_tag :image %> <%= f.text_field :image, value: @mountain.image %><br />
  <%= label_tag :location %> <%= f.text_field :location, value: @mountain.location %><br />
  <%= label_tag :elevation %> <%= f.text_field :elevation, value: @mountain.elevation %><br />
  <%= label_tag :description %> <%= f.text_area :description, value: @mountain.description %><br />
  <%= f.submit %>
<% end %>
