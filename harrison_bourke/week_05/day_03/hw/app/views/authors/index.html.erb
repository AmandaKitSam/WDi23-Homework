<h1>All Authors</h1>

<% @authors.each do |author| %>
  <%= image_tag author.image, :class => 'thumb' %>
  <ul>
    <li>Name: <%= link_to author.name, author %></li>
    <li>Date of Birth: <%= author.dob.strftime "%B %e, %Y" unless author.dob.nil? %></li>
    <li>Nationality: <%= author.nationality %></li>
  </ul>
<% end %>
