<h1><%= @book.title %></h1>

<%= image_tag @book.image, :class => 'feature' %>

<ul>
  <li>Author: <%= link_to @book.author.name, @book.author %></li>
  <li>Year: <%= @book.year %></li>
  <li>Genre: <%= @book.genre %></li>
</ul>

<div class="controls">
  <%= link_to "Edit Book", edit_book_path(@book) %>
  <%= link_to "Delete Book", @book, :method => :delete, :data => {:confirm => 'Are you sure you want to delete this work?'} %>
</div>
