<h2><%= @book.name %></h2>
<h3>Author <%= @author%></h3>
<% unless @book.image.nil?%>
<img class="feature" src="<%= @book.image%>" alt="<%=@book.name%>" />
<%end%>


<div class="controls">
	<a href="/books/<%=@book.id%>/delete">Delete</a>
	<a href="/books/<%=@book.id%>/edit">Edit</a>
</div>
