<h1>All Movies</h1>
<% @movies.each do |movie| %>
<div class="movies">
  <%= link_to image_tag(movie.image, :class => 'thumb'), movie%>

    <p>Name: <%= link_to movie.name, movie %></p>
    <p>Date of Release:<br> <%= movie.release.strftime " %e %B, %Y" unless movie.release.nil? %></p>
    <div class="allmovies">
    <p>Genre: <%= movie.genre %></p>
    </div>
</div>

<% end %>
