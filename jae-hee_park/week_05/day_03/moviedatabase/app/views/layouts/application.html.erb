<!DOCTYPE html>
<html>
  <head>
    <title>Movie Database</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class= "container">
      <nav>
        <%= link_to "Home", "/" %>
        <%= link_to "All Directors", directors_path %>
        <%= link_to "Add Director", new_director_path %>
        |
        <%= link_to "All Movies", movies_path %>
        <%= link_to "Add Movie", new_movie_path %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
