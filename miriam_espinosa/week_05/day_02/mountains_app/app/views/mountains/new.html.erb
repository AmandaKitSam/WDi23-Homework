<h1>New Mountain</h1>

<form action="/mountains" method="post">

  <label for="name">Name:</label>
  <input type="text" id="name" name="name" placeholder="Dhaulagiri I" required autofocus>

  <label for="image">Image:</label>
  <input type="url" id="image" name="image" placeholder="http://...">

  <label for="height">Height:</label>
  <input type="number" id="height" name="height" placeholder="1000">

  <label for="parent">Parent:</label>
  <input type="text" id="parent" name="parent" placeholder="K2">

  <label for="first_ascent">First ascent:</label>
  <input type="number" id="first_ascent" name="first_ascent" placeholder="1978">

  <label for="country">Country:</label>
  <input type="text" id="country" name="country" placeholder="Nepal">

  <button>Create Mountain</button>

</form>
