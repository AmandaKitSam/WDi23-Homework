<h1><%= @book.title %></h1>

<%= image_tag @book.image, :class => 'feature' %>
<ul>
<li>Author: <%= link_to @book.author.name, @book.author unless @book.author.nil? %></li>
<li>Publisher: <%= @book.publisher %></li>
<li>Publication date:  <%= @book.publication_date.strftime "%e %B, %Y" unless @book.publication_date.nil? %></li>
</ul>

<div class="controls">
  <%= link_to "Edit book", edit_book_path(@book) %>
  <%= link_to "Delete book", @book, :method => :delete, :data => {:confirm => 'Are you sure?'}%>
</div>
