<h1>All Books</h1>

<% @books.each do |book| %>
  <%= image_tag book.image, :class => 'thumb' %>
<ul>
  <li>Title: <%= link_to book.title, book %></li>
  <li>Author: <%= book.author %></li>
  <li>Publisher: <%= book.publisher %></li>
  <li>Publication date:  <%= book.publication_date.strftime "%e %B, %Y" unless book.publication_date.nil? %></li>
</ul>
<% end %>
